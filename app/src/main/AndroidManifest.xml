<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">
    <!-- ENABLE PERMISSIONS ABOUT EXTERNAL STORAGE ACCESS -->
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"
        tools:ignore="ScopedStorage" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Ration"
        >

        <!-- MainActivity -->
        <activity
            android:name=".MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- List and Detail Activities -->
        <activity android:name=".ui.animal.AnimalListActivity" />
        <activity android:name=".ui.animal.AnimalDetailActivity" />
        <activity android:name=".ui.aliment.AlimentListActivity" />
        <activity android:name=".ui.aliment.AlimentDetailActivity" />
        <activity android:name=".ui.ration.RationHistoryActivity" />
        <activity android:name=".ui.ration.RationDetailActivity" />
        <activity android:name=".ui.ration.RationFormActivity" />

    </application>
</manifest>
